env:
    browser: true
    node: true
    es6: true
    jest: true

globals:
    $: true
    widgets: true

parser: 'babel-eslint'

plugins:
    - compat
    - react
    - loosely-restrict-imports
    - jsx-a11y

rules:
    brace-style: 2
    camelcase: 2
    comma-dangle: [2, 'never']
    comma-spacing: 2
    comma-style: [2, 'last']
    compat/compat: 2
    default-case: 2
    dot-notation: 2
    eol-last: 2
    eqeqeq: 2
    guard-for-in: 2
    handle-callback-err: 2
    indent: [2, 4, {"SwitchCase": 1}]
